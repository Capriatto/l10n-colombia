<odoo>
    <template id="account_invoice_report_template_with_qr" inherit_id="account.report_invoice_document">
        <xpath expr="//h2" position="replace">
                <div style="width:700px; height:110px;float:left;">
                <div style="width:600px;float:left;">
                    <h2>
                        <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.type == 'out_refund'">Refund</span>
                        <span t-if="o.type == 'in_refund'">Vendor Refund</span>
                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                        <span t-field="o.number"/>
                    </h2>
                </div>
                <t t-if="o.company_id.einvoicing_enabled == True">
                        <t t-foreach="o.dian_document_ids" t-as="dd">
                            <t t-if="dd.state == 'done' or dd.state == 'sent'">
                                <img class="image" t-att-src="'data:image/png;base64,%s' % dd.qr_image" style="width:120px;height:120px;margin-bottom:5px;"/>
                                <div style="float:right;width:700px;font-size:11px">
                                    <p>
                                    <strong>CUFE/CUDE:</strong><span t-field="dd.cufe_cude"/>
                                    </p>
                                </div>
                            </t>
                        </t>
                    </t>
                </div>
        </xpath>
    </template>
</odoo>
